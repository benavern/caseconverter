{
  "name": "Case converter",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Convert text to uppercase or lowercase on the fly.",
  "homepage_url": "http://benavern.github.io/caseconverter",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_title": "browser action demo",
    "default_popup": "main.html"
  },
  "permissions": [
    "tabs"
  ]
}